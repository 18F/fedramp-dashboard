#!/bin/sh

if [ "$(git rev-parse --abbrev-ref HEAD)" == "master" ]
then
    git checkout gh-pages
    git merge -X theirs master

    npm run build
    git add -f dist
    git add -f css
    git add -f fonts
    git add -f img

    npm run-script docgen
    git add -f doc

    git commit -m 'Updated GitHub pages and documentation'
    git push -f origin gh-pages
    git checkout master
fi
